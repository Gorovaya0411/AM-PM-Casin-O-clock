<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_two">

        <FrameLayout
            android:id="@+id/watch_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/watch_location_search_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_watch_location_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/watch_bg_for_watch_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_watch_bg_for_watch" />

        <TextView
            android:id="@+id/watch_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/font"
            android:textColor="@color/icon_nav_color_selected"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/watch_date_txt"
            app:layout_constraintEnd_toEndOf="@+id/watch_bg_for_watch_img"
            app:layout_constraintStart_toStartOf="@+id/watch_bg_for_watch_img"
            app:layout_constraintTop_toTopOf="@+id/watch_bg_for_watch_img"
            tools:text="00:00" />

        <TextView
            android:id="@+id/watch_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/font"
            android:textColor="@color/icon_nav_color"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/watch_bg_for_watch_img"
            app:layout_constraintEnd_toEndOf="@+id/watch_bg_for_watch_img"
            app:layout_constraintStart_toStartOf="@+id/watch_bg_for_watch_img"
            tools:text="вт, 6 июля" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>